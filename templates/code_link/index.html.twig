{% extends 'base.html.twig' %}

{% block title %}CodeLink index{% endblock %}

{% block body %}
    <h1>CodeLink index</h1>

    <p><a href="/magicAdmin">Home</a></p>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Link</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for code_link in code_links %}
            <tr>
                <td>{{ code_link.id }}</td>
                <td>{{ code_link.link }}</td>
                <td>
                    <a href="{{ path('code_link_show', {'id': code_link.id}) }}">show</a>
                    <a href="{{ path('code_link_edit', {'id': code_link.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('code_link_new') }}">Create new</a>
{% endblock %}
