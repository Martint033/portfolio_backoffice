<form method="post" action="{{ path('contexte_delete', {'id': contexte.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contexte.id) }}">
    <button class="btn">Delete</button>
</form>
